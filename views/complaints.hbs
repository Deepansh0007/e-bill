<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <link rel="stylesheet" href="../common.css" />
  <link rel="stylesheet" href="../complaints.css" />
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
  />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
    crossorigin="anonymous"
  />
  <body>
    <nav class="navbar">
      <div id="name"><h5><i class="bi bi-box-fill"></i>EZ-BILL</h5></div>
      <a href="/logout">Logout</a>
    </nav>
    <div class="left-main">
      <div class="left-container">
        <div class="menu">
          <p><a href="/user/dashboard">Dashboard</a></p>
          <p><a href="/user/bills">Bills</a></p>
          <p><a href="/user/transaction">Transactions</a></p>
          <p><a href="/user/complaints">Complaints</a></p>
        </div>
      </div>
      <div class="mainContainer">
        <h2>Complaints</h2>
        <h5>Complaints > overview</h5>
        <button type="button" id="butt" onclick="generate()">Generate complaint</button>
        <table class="head">
          <thead>
            <tr>
              <th>Complaint No.</th>
              <th>Complaint</th>
              <th>Status</th>
            </tr>
          </thead>
        </table>
        {{#each data}}
          <table class="tableData">
            <td><p class="data">{{this.COMPLAINTID}}</p></td>
            <td><p class="data">{{this.COMPLAINT}}</p></td>
            <td><p class="data">{{this.STATUS}}</p></td>
          </table>
        {{/each}}
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script>

      function generate(){
        let complaintt = prompt("Enter the complaint")
        if(complaintt){
          fetch('/user/generate',{
            method: "POST",
            headers: {"Content-Type": "application/json"},
            body: JSON.stringify({
              complaint: complaintt 
            }) 
          })
        }
      }
    </script>
  </body>
</html>